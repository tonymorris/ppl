#!/bin/sh

set -e

mkdir -p "dist" "dist/briefings" "dist/drills" "dist/notes"

pandoc="./.cabal-sandbox/bin/pandoc"

files="\
  departure-briefing\
  documentation-received\
  part61-mos\
  ppl-costs-and-breakdown\
  README\
  safety-briefing\
  ybaf-radio-examples\
  ybaf-radio\
"

briefings="\
  briefings/20151210-effects-of-controls\
  briefings/20151214-straight-and-level\
  briefings/20151218-climbing-and-descending\
  briefings/20151220-turning\
  briefings/20160104-stalling\
  briefings/20160108-circuits\
  briefings/20160212-circuit-emergencies\
  briefings/20160225-circuit-emergencies2\
  briefings/questions\
"

drills="\
  drills/after-landing\
  drills/circuits\
  drills/drill-videos\
  drills/engine-start\
  drills/pre-circuits\
"

notes="\
  notes/20160122-circuits\
  notes/20160129-exam\
  notes/aviation-plugs\
  notes/before-flight\
  notes/vh-afr-flight-deck\
  notes/vh-ldo-flight-deck\
"

for doc in $files $briefings $drills $notes
do
  echo "$doc"
  $pandoc "$doc".md -o dist/"$doc".pdf --tab-stop=2 --template=share/default.latex
done
